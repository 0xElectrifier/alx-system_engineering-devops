[mysqld]
pid-file        = /var/run/mysqld/mysqld.pid
socket          = /var/run/mysqld/mysqld.sock
datadir         = /var/lib/mysql
log-error       = /var/log/mysql/error.log

# By default we only accept connections from localhost
# Now accept connection from outside localhost
# bind-address  = 127.0.0.1
# bind-address   = 52.87.219.245
# Server-id, to distiguish every server in the Replication environment
server-id       = 1

# Enable binary logging on this server
log_bin         = /var/log/mysql/mysql-bin.log

# Indicate name of database to replicate
binlog_do_db    = tyrell_corp

# Disabling symbolic-links is recommended to prevent assorted security risks
symbolic-links=0
